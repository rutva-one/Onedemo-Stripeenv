            toggleCardSelection(cardId) {
                console.log('toggleCardSelection called with ID:', cardId);
                const card = this.availableCards.find(c => c.id === cardId);
                if (!card) {
                    console.error('Card not found with ID:', cardId);
                    return;
                }

                console.log('Card found:', card.cardName, 'Currently selected:', card.isSelected);

                if (card.isSelected) {
                    // Deselect card
                    console.log('Deselecting card:', card.cardName);
                    card.isSelected = false;
                    this.selectedCards = this.selectedCards.filter(c => c.id !== cardId);
                } else {
                    // Check if we can select more cards
                    if (this.selectedCards.length >= this.maxCards) {
                        alert(`You can only select ${this.maxCards} cards for your wallet.`);
                        return;
                    }

                    // Select card
                    console.log('Selecting card:', card.cardName);
                    card.isSelected = true;
                    this.selectedCards.push(card);
                }

                console.log('Current selected cards count:', this.selectedCards.length);
                this.updateCardSelection();
            }

            updateCardSelection() {
                // Update visual state of all cards
                this.availableCards.forEach(card => {
                    const cardElement = document.querySelector(`[data-card-id="${card.id}"]`);
                    if (cardElement) {
                        cardElement.className = `card-option ${card.isSelected ? 'selected' : ''}`;

                        // Disable cards if max reached and this card isn't selected
                        if (this.selectedCards.length >= this.maxCards && !card.isSelected) {
                            cardElement.classList.add('disabled');
                        } else {
                            cardElement.classList.remove('disabled');
                        }
                    }
                });

                // Update counter
                this.selectedCount.textContent = this.selectedCards.length;

                // Show backup card selection when 4 cards are selected
                if (this.selectedCards.length === this.maxCards && !this.backupCard) {
                    this.showBackupCardSelection();
                } else if (this.selectedCards.length < this.maxCards) {
                    this.backupCardSection.style.display = 'none';
                    this.optimizationPreferenceSection.style.display = 'none';
                    this.backupCard = null;
                }

                // Update confirm button
                const hasBackupCard = this.backupCard !== null;
                const readyToConfirm = this.selectedCards.length === this.maxCards && hasBackupCard;

                this.walletConfirmBtn.disabled = !readyToConfirm;

                if (this.selectedCards.length < this.maxCards) {
                    this.walletConfirmBtn.textContent = `Select ${this.maxCards - this.selectedCards.length} more cards`;
                } else if (!hasBackupCard) {
                    this.walletConfirmBtn.textContent = 'Choose a backup card';
                } else {
                    this.walletConfirmBtn.textContent = 'Confirm Wallet Selection';
                }
            }

            showBackupCardSelection() {
                this.backupCardSection.style.display = 'block';
