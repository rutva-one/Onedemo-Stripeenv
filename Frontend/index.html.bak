            <div class="optimization-section" id="optimizationSection" style="display: none;">
                 <div class="section-title" style="color: var(--primary-color);">Card Selection</div>
                <div class="fun-fact-card" id="funFactCard">
                    <div class="fun-fact-content">
                        <div class="fun-fact-header"><span class="fun-fact-title" id="funFactTitle"></span></div>
                        <div class="fun-fact-description" id="funFactDescription"></div>
                    </div>
