        <div class="panel transaction-panel" id="paymentSimulation" style="display: none;">
            <h2>Transaction Demo</h2>

            <div class="card-mockup">
                <img src="assets/Card.png?v=1" alt="One Card" />
            </div>

            <div class="transaction-section">
                <div class="section-title">Select transaction</div>
                <div class="transaction-grid">
                    <button class="tx-button" data-descriptor="American Airlines" data-amount="35000" data-category="other_direct_marketers" data-mcc="4511"><div>Flight</div><div>$350.00</div></button>
                    <button class="tx-button" data-descriptor="The Corner Bistro" data-amount="7500" data-category="other_direct_marketers" data-mcc="5812"><div>Food</div><div>$75.00</div></button>
                    <button class="tx-button" data-descriptor="Whole Foods" data-amount="12000" data-category="other_direct_marketers" data-mcc="5411"><div>Groceries</div><div>$120.00</div></button>
                    <button class="tx-button" data-descriptor="Yellow Cab" data-amount="2500" data-category="other_direct_marketers" data-mcc="4121"><div>Cab</div><div>$25.00</div></button>
                    <button class="tx-button" data-descriptor="Shell Gas Station" data-amount="6000" data-category="other_direct_marketers" data-mcc="5541"><div>Gas</div><div>$60.00</div></button>
                    <button class="tx-button" data-descriptor="CVS Pharmacy" data-amount="4000" data-category="other_direct_marketers" data-mcc="5912"><div>Pharmacy</div><div>$40.00</div></button>
                </div>
