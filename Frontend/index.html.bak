            removeFromWallet(cardId) {
                console.log('removeFromWallet called for card:', cardId);

                // Remove from selected cards
                this.selectedCards = this.selectedCards.filter(c => c.id !== cardId);

                // Update the card in available cards
                const card = this.availableCards.find(c => c.id === cardId);
                if (card) {
                    card.isSelected = false;
                }

                // Clear optimization state since wallet changed
                this.isOptimized = false;

                // Hide payment simulation when wallet changes
                this.paymentSimulation.style.display = 'none';
                this.walletOptimizationComplete.style.display = 'none';

                // Re-render wallet and show setup again if needed
                if (this.selectedCards.length === 0) {
                    this.myWalletSection.style.display = 'none';
                    this.walletSetup.style.display = 'block';
                    this.updateCardSelection();
                } else {
                    // Still have cards, but need to re-optimize
                    this.renderMyWallet();
                    // Show the card selection interface again to add more cards
                    this.walletSetup.style.display = 'block';
                    this.updateCardSelection();

                    // Clear the backend cache for old card combination
                    this.clearBackendCacheForWallet();
                }
            }

            selectTransaction(button) {
                if (this.isProcessing) return;

                console.log('Transaction button clicked:', button.dataset.descriptor);

                // Ensure we have the latest button references
                this.txButtons = document.querySelectorAll('.tx-button');
                this.txButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                this.selectedTransaction = {
                    descriptor: button.dataset.descriptor,
                    amount: parseInt(button.dataset.amount),
                    category: button.dataset.category, // Send the correct string
                };

                this.resetUI();
                this.addLogEntry(`Selected: ${this.selectedTransaction.descriptor} for $${(this.selectedTransaction.amount / 100).toFixed(2)}`, 'info', true);
                this.payBtn.disabled = false;
                this.payBtn.textContent = `Pay $${(this.selectedTransaction.amount / 100).toFixed(2)}`;

                console.log('Transaction selected:', this.selectedTransaction);
            }

            async processPayment() {
                if (!this.selectedTransaction || this.isProcessing) return;

                this.isProcessing = true;
                this.processHasFinished = false;
                this.progressContainer.classList.add('visible');
                this.payBtn.classList.add('processing');
                this.payBtn.innerHTML = '<span></span>Processing...';
                this.txButtons.forEach(btn => btn.disabled = true);
                
                this.addLogEntry('Contacting server to start simulation...', 'info', true);
                
                this.startBackendSimulation();
                this.runVisualProgress(); 
            }

            async startBackendSimulation() {
                try {
                    const response = await fetch(`${this.serverUrl}/simulate-transaction`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(this.selectedTransaction),
                    });
                    if (!response.ok) throw new Error(`Server responded with status: ${response.status}`);
                    this.startPollingLog();
                } catch (error) {
                    this.addLogEntry(`ERROR: Connection to server failed: ${error.message}`, 'error', true);
                    this.failPayment('Server Error');
                }
            }
            
            async runVisualProgress() {
                for (const stage of this.stages) {
                    if (this.processHasFinished) break;
                    this.updateStageUI(stage.name);
                    await this.sleep(stage.duration);
                }
            }

            startPollingLog() {
                this.stopPollingLog();
                this.logPoller = setInterval(async () => {
                    if (this.processHasFinished) {
                        this.stopPollingLog();
                        return;
                    }
                    try {
                        const response = await fetch(`${this.serverUrl}/get-log`);
                        const data = await response.json();
                        this.updateLogFromServer(data.log);
                    } catch (error) {
                        this.failPayment('Connection Lost');
                    }
                }, 1000);
            }

            stopPollingLog() {
                clearInterval(this.logPoller);
                this.logPoller = null;
            }

            updateLogFromServer(serverLog) {
                const newEntries = serverLog.slice(this.displayedLogCount);
                newEntries.forEach(entry => {
                    const type = entry.includes('ERROR') ? 'error' : entry.includes('SUCCESS') ? 'success' : entry.includes('WARNING') ? 'warning' : 'info';
                    this.addLogEntry(entry, type, false);
                    
                    if (entry.includes('Stripe charge successful')) {
                        this.completePayment();
                    } else if (entry.includes('charge failed') || entry.includes('Declining transaction') || entry.includes('simulation failed')) {
                        this.failPayment('Transaction Declined');
                    }
                });
                this.displayedLogCount = serverLog.length;
            }

            completePayment() {
                if (this.processHasFinished) return;
                this.processHasFinished = true;
                this.stopPollingLog();

                this.updateStageUI('complete', true); 
                this.payBtn.className = 'pay-button success';
                this.payBtn.textContent = 'Payment Successful!';
                
                this.showCardOptimization();
                this.showReceipt(`TXN_${Date.now()}`);
                this.resetBtn.style.display = 'block';
                this.isProcessing = false;
            }
            
            failPayment(reason) {
                if (this.processHasFinished) return;
                this.processHasFinished = true;
                this.stopPollingLog();
                
                this.payBtn.className = 'pay-button failure';
                this.payBtn.textContent = `Transaction Failed: ${reason}`;
                
                this.resetBtn.style.display = 'block';
                this.isProcessing = false;
            }

            async showCardOptimization() {
                try {
                    // Fetch the actual card that was selected by the backend
                    const response = await fetch(`${this.serverUrl}/get-last-selected-card`);
                    if (!response.ok) {
                        console.log('Could not fetch card optimization info');
                        return;
                    }

                    const data = await response.json();
                    const selectedCard = data.selectedCard;

                    if (!selectedCard) {
                        console.log('No card selection data available');
                        return;
                    }

                    // Build descriptive text about the card selection
                    const cardTypeDisplay = {
                        'visa': 'Visa',
                        'mastercard': 'Mastercard',
                        'amex': 'American Express',
                        'discover': 'Discover'
                    }[selectedCard.cardType] || selectedCard.cardType;

                    this.funFactTitle.textContent = `Smart Card Optimization`;
                    this.funFactDescription.textContent = `Your payment was automatically routed to your ${selectedCard.displayName} (${cardTypeDisplay}), earning you ${selectedCard.rewardAmount}x ${selectedCard.rewardType} for this transaction category!`;

                    this.optimizationSection.style.display = 'block';
                    setTimeout(() => this.optimizationSection.classList.add('visible'), 100);
                } catch (error) {
                    console.error('Error showing card optimization:', error);
                }
            }
            
            showReceipt(transactionId) {
                const tax = Math.round(this.selectedTransaction.amount * 0.08);
                const total = this.selectedTransaction.amount + tax;
                
                const receiptContent = document.getElementById('receiptContent');
                receiptContent.innerHTML = `
                    <div class="receipt-item"><span>Merchant:</span><span>${this.selectedTransaction.descriptor}</span></div>
                    <div class="receipt-item"><span>Amount:</span><span>$${(this.selectedTransaction.amount / 100).toFixed(2)}</span></div>
                    <div class="receipt-item"><span>Tax (est.):</span><span>$${(tax / 100).toFixed(2)}</span></div>
                    <div class="receipt-item total"><span>Total:</span><span>$${(total / 100).toFixed(2)}</span></div>
                    <div class="receipt-item"><span>Transaction ID:</span><span>${transactionId}</span></div>
                    <div class="receipt-item"><span>Date:</span><span>${new Date().toLocaleString()}</span></div>`;
                
                setTimeout(() => this.receiptContainer.classList.add('visible'), 500);
            }

            updateStageUI(stageName, forceComplete = false) {
                const stageElements = document.querySelectorAll('.stage');
                const stages = this.stages.map(s => s.name);
                const stageIndex = stages.indexOf(stageName);

                stageElements.forEach((stageEl, index) => {
                    stageEl.classList.remove('active', 'completed');
                    if (forceComplete || index < stageIndex) {
                        stageEl.classList.add('completed');
                    } else if (index === stageIndex) {
                        stageEl.classList.add('active');
                    }
                });
                const progress = this.stages[stageIndex]?.progress || 100;
                this.updateProgress(progress);
            }
            
            updateProgress(percentage) { this.progressLineFill.style.width = `${percentage}%`; }
            sleep(ms) { return new Promise(resolve => setTimeout(resolve, ms)); }
            
            reset() {
                console.log('reset() called - preserving wallet state');
                this.stopPollingLog();

                // Stop optimization polling if active
                if (this.optimizationPoller) {
                    clearInterval(this.optimizationPoller);
                    this.optimizationPoller = null;
                }

                this.isProcessing = false;
                this.processHasFinished = true;
                this.selectedTransaction = null;

                this.txButtons.forEach(btn => { btn.disabled = false; btn.classList.remove('active'); });
                this.payBtn.disabled = true;
                this.payBtn.className = 'pay-button';
                this.payBtn.textContent = 'Select a transaction';

                this.resetUI();
                this.logDiv.innerHTML = '';

                // IMPORTANT: Don't reset wallet state - keep the optimized wallet visible
                if (this.isOptimized && this.selectedCards.length > 0) {
                    // Ensure wallet sections remain visible after reset
                    this.myWalletSection.style.display = 'block';
                    this.paymentSimulation.style.display = 'block';
                    this.walletOptimizationComplete.style.display = 'block';
                    this.walletSetup.style.display = 'none';
                    this.simpleOptimization.style.display = 'none';
                }

                // Show appropriate message based on optimization state
                const readyMessage = this.isOptimized
                    ? 'System optimized and ready - Select a transaction type to begin...'
                    : 'System ready - Select a transaction type to begin...';
                this.addLogEntry(readyMessage, 'info', true);
            }

            resetUI() {
                this.progressContainer.classList.remove('visible');
                this.receiptContainer.classList.remove('visible');
                this.optimizationSection.style.display = 'none';
                this.resetBtn.style.display = 'none';
                this.progressLineFill.style.width = '0%';
                this.displayedLogCount = 0;
                document.querySelectorAll('.stage').forEach(stage => stage.classList.remove('active', 'completed'));
                // Don't clear the log when a transaction is being selected
                // if (!this.isProcessing) {
                //      this.logDiv.innerHTML = '<div class="log-entry info">System ready - Select a transaction type to begin...</div>';
                // }
            }

            addLogEntry(message, type = 'info', includeTimestamp = true) {
                const entry = document.createElement('div');
                entry.className = `log-entry ${type}`;
                const time = includeTimestamp ? `${new Date().toLocaleTimeString()}: ` : '';
                entry.textContent = `${time}${message}`;
                this.logDiv.appendChild(entry);
                this.logDiv.scrollTop = this.logDiv.scrollHeight;
            }
        }

        let processor;
        document.addEventListener('DOMContentLoaded', () => {
            processor = new EnhancedPaymentProcessor();
        });
    </script>
</body>
</html>