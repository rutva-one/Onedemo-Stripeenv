    <script>
        class EnhancedPaymentProcessor {
            constructor() {
                // DOM Element References
                this.payBtn = document.getElementById('payBtn');
                this.logDiv = document.getElementById('log');
                this.txButtons = document.querySelectorAll('.tx-button');
                this.progressContainer = document.getElementById('progressContainer');
                this.progressLineFill = document.getElementById('progressLineFill');
                this.receiptContainer = document.getElementById('receiptContainer');
                this.receiptContent = document.getElementById('receiptContent');
                this.resetBtn = document.getElementById('resetBtn');
                this.optimizationSection = document.getElementById('optimizationSection');
                this.funFactTitle = document.getElementById('funFactTitle');
                this.funFactDescription = document.getElementById('funFactDescription');

                // Card Selection Elements
                this.walletSetup = document.getElementById('walletSetup');
                this.myWalletSection = document.getElementById('myWalletSection');
                this.paymentSimulation = document.getElementById('paymentSimulation');
                this.cardSelectionGrid = document.getElementById('cardSelectionGrid');
                this.myWalletGrid = document.getElementById('myWalletGrid');
                this.selectedCount = document.getElementById('selectedCount');
                this.walletConfirmBtn = document.getElementById('walletConfirmBtn');
                this.customizeWalletBtn = document.getElementById('customizeWalletBtn');
                this.backupCardSection = document.getElementById('backupCardSection');
                this.backupCardGrid = document.getElementById('backupCardGrid');

                // Optimization Preference Elements
                this.optimizationPreferenceSection = document.getElementById('optimizationPreferenceSection');
                this.optimizationToggle = document.getElementById('optimizationToggle');
                this.cashLabel = document.getElementById('cashLabel');
                this.rewardsLabel = document.getElementById('rewardsLabel');

                // Optimization Elements
                this.simpleOptimization = document.getElementById('simpleOptimization');
                this.walletOptimizationComplete = document.getElementById('walletOptimizationComplete');

                // State Management
                this.selectedTransaction = null;
                this.isProcessing = false;
                this.logPoller = null;
                this.displayedLogCount = 0;
                // Auto-detect server URL based on environment
                this.serverUrl = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1'
                    ? 'http://localhost:3000'
                    : `${window.location.protocol}//${window.location.hostname}/api`;
                this.processHasFinished = false;

                // Card Selection State
                this.availableCards = [];
                this.selectedCards = [];
                this.maxCards = 4;
                this.backupCard = null;
                this.optimizationPreference = 'rewards'; // 'cash' or 'rewards'

                // Optimization State
                this.optimizationPoller = null;
                this.isOptimized = false;

                // For visual simulation timing
                this.stages = [
                    { name: 'initiate',  duration: 1000, progress: 20 },
                    { name: 'validate',  duration: 1500, progress: 40 },
                    { name: 'process',   duration: 2000, progress: 60 },
                    { name: 'authorize', duration: 1500, progress: 80 },
                    { name: 'complete',  duration: 500,  progress: 100 }
                ];

                this.init();
                this.createParticles();
                this.loadCards();
            }
            
            init() {
                this.setupTransactionButtons();
                this.payBtn.addEventListener('click', () => this.processPayment());
                this.resetBtn.addEventListener('click', () => this.reset());
                this.walletConfirmBtn.addEventListener('click', () => this.confirmWallet());
                this.customizeWalletBtn.addEventListener('click', () => this.showCustomizeWallet());
                this.optimizationToggle.addEventListener('change', (e) => this.updateOptimizationPreference(e));
                this.updateToggleLabels();
            }

            updateOptimizationPreference(e) {
                const isChecked = e.target.checked;
                if (isChecked) {
                    this.optimizationPreference = 'rewards';
                } else {
                    this.optimizationPreference = 'cash';
                }
                this.updateToggleLabels();
                console.log('Optimization preference:', this.optimizationPreference);
            }

            updateToggleLabels() {
                if (this.optimizationToggle.checked) {
                    // Rewards mode is active
                    this.cashLabel.classList.add('inactive');
                    this.rewardsLabel.classList.remove('inactive');
                } else {
                    // Cash mode is active
                    this.cashLabel.classList.remove('inactive');
                    this.rewardsLabel.classList.add('inactive');
                }
            }

            setupTransactionButtons() {
                // Re-query transaction buttons to ensure we get them even if they're initially hidden
                this.txButtons = document.querySelectorAll('.tx-button');
                this.txButtons.forEach(button => {
                    button.addEventListener('click', () => this.selectTransaction(button));
                });
            }

            createParticles() {
                const particlesContainer = document.getElementById('particles');
                if(!particlesContainer) return;
                for (let i = 0; i < 25; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';
                    particle.style.left = Math.random() * 100 + '%';
                    particle.style.animationDelay = -(Math.random() * 35) + 's';
                    particle.style.animationDuration = (Math.random() * 20 + 30) + 's';
                    particlesContainer.appendChild(particle);
                }
            }

